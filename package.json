{
    "name": "mpdx-react",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "lint": "tsc --noEmit && eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
        "lint:ci": "tsc --noEmit && eslint '*/**/*.{js,ts,tsx}'",
        "storybook": "start-storybook -p 6006 -c .storybook -s ./public",
        "build-storybook": "build-storybook -c .storybook -s ./public",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "chromatic": "chromatic"
    },
    "dependencies": {
        "@apollo/client": "^3.0.0-beta.50",
        "@apollo/link-context": "^2.0.0-beta.3",
        "@material-ui/core": "^4.11.0",
        "@material-ui/icons": "^4.9.1",
        "@material-ui/lab": "^4.0.0-alpha.56",
        "apollo-cache-persist": "^0.1.1",
        "axios": "^0.19.2",
        "faker": "^4.1.0",
        "framer-motion": "^1.11.1",
        "graphql": "^15.0.0",
        "graphql-tag": "^2.10.3",
        "imagemin-svgo": "^8.0.0",
        "isomorphic-fetch": "^2.2.1",
        "lodash": "^4.17.19",
        "moment": "^2.27.0",
        "next": "^9.4.4",
        "next-auth": "^2.2.0",
        "next-compose-plugins": "^2.2.0",
        "next-optimized-images": "^2.6.1",
        "next-plugin-graphql": "0.0.2",
        "next-pwa": "^3.0.1",
        "react": "16.13.1",
        "react-div-100vh": "^0.3.8",
        "react-dom": "16.13.1",
        "react-swipeable-views": "^0.13.9",
        "recharts": "^1.8.5",
        "swr": "^0.2.2"
    },
    "devDependencies": {
        "@babel/core": "^7.9.0",
        "@storybook/addon-actions": "^5.3.17",
        "@storybook/addon-knobs": "^5.3.19",
        "@storybook/addon-viewport": "^5.3.17",
        "@storybook/react": "^5.3.17",
        "@testing-library/jest-dom": "^5.3.0",
        "@testing-library/react": "^10.0.2",
        "@types/axios": "^0.14.0",
        "@types/faker": "^4.1.11",
        "@types/jest": "^25.1.5",
        "@types/node": "^13.9.5",
        "@types/react": "^16.9.27",
        "@typescript-eslint/eslint-plugin": "^2.25.0",
        "@typescript-eslint/parser": "^2.26.0",
        "babel-loader": "^8.1.0",
        "babel-preset-react-app": "^9.1.2",
        "chromatic": "^5.0.0",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.10.1",
        "eslint-plugin-import": "^2.20.2",
        "eslint-plugin-jest": "^23.8.2",
        "eslint-plugin-prettier": "^3.1.2",
        "eslint-plugin-react": "^7.19.0",
        "husky": "^4.2.3",
        "jest": "^25.2.6",
        "lint-staged": "^10.0.9",
        "prettier": "^2.0.2",
        "ts-jest": "^25.3.0",
        "typescript": "^3.8.3"
    },
    "husky": {
        "hooks": {
            "pre-commit": "tsc --noEmit && lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,ts,tsx}": [
            "eslint --fix",
            "git add"
        ]
    },
    "bit": {
        "env": {
            "compiler": "bit.envs/compilers/react-typescript@3.1.54",
            "tester": "bit.envs/testers/jest@22.4.3"
        },
        "componentsDefaultDirectory": "components/{name}",
        "packageManager": "npm",
        "overrides": {
            "*": {
                "dependencies": {
                    "@types/node": "^13.9.5"
                },
                "devDependencies": {
                    "@types/jest": "^25.1.5",
                    "@testing-library/jest-dom": "^5.3.0"
                }
            }
        }
    }
}
